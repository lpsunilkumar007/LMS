<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/css")
</head>
<body>
    <!--  Header start-->

    @{Html.RenderAction("_topMenu", "InviteTest"); }
    <!--  Header Ends -->
    <section id="main">
        <div class="container-fluid">
            <div class="row">
                <aside class=" col-lg-4 col-md-4 col-sm-12 col-xs-12 left-side">
                    <div class="left-panel dashboard text-center text-white">
                        <img src="~/Template/Company/images/test-icon.png" alt="test-icon">
                        <h3 id="company-left-panel-text">Experience Level</h3>
                        <p>
                            Online Aptitude Test For <br>
                            Job Recruitment/Interview
                        </p>
                        <div class="test-progress mt-5">
                            <h4> Test Progress </h4>
                            <ul class="list-inline">
                                <li class="active list-inline-item" id="link-experience-tab" 
                                    data-inline-select-tab="true" 
                                    data-tab="experience-tab"
                                    data-left-panel-heading="Experience Level"
                                    
                                    >
                                    <a href="javascript:void(0)">
                                        <div class="exp icon"> <span> 1 </span> </div>
                                        <h6>Experience</h6>
                                    </a>
                                </li>
                                <li class="list-inline-item" id="link-technology-tab" data-inline-select-tab="true" data-tab="technology-tab" 
                                    data-left-panel-heading="Select Technologies">
                                    <a href="javascript:void(0)">
                                        <div class="tech icon"> <span> 2 </span> </div>
                                        <h6>Technology</h6>
                                    </a>
                                </li>
                                <li class="list-inline-item" id="link-time-tab" data-inline-select-tab="true" data-tab="time-tab"
                                    data-left-panel-heading="Prepare Test">
                                    <a href="javascript:void(0)">
                                        <div class="tim icon"> <span> 3 </span> </div>
                                        <h6>Time</h6>
                                    </a>
                                </li>
                                <li class="list-inline-item" id="link-preview-tab" data-inline-select-tab="true" data-tab="sampleTest-tab"
                                    data-left-panel-heading="Sample Tests">
                                    <a href="javascript:void(0)">
                                        <div class="pre icon"> <span> 4 </span> </div>
                                        <h6>Perview</h6>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </aside>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 right-side">
                    <div class="right-panel">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- row -->
        </div>
    </section>
    <!-- main-->

    <footer>
        <ul class="footer-menu">
            <li> Copyright 2018 ITCM Terms & Conditions </li>
            <li> <a href="#"> How it works </a> </li>
            <li> <a href="#">Contact us</a> </li>
        </ul>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    @Scripts.Render("~/CompanyJs")

    <div id="company-modal-pop-up" class="modal" role="dialog">
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
