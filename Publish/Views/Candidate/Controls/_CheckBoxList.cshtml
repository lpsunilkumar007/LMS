@model OnlineTestApp.ViewModel.Candidate.CandidateTestQuestionsViewModel
@{
    Layout = null;
}
<ul class="list-unstyled">
    @for (int i = 0; i < Model.CandidateTestQuestions.LstCandidateTestQuestionOptions.Count(); i++)
    {
        var optNo = Convert.ToChar(i + 97);
        <li>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" id="@Model.CandidateTestQuestions.LstCandidateTestQuestionOptions[i].CandidateQuestionOptionId" name="@Model.CandidateTestQuestions.LstCandidateTestQuestionOptions[i].FkQuestionId" class="custom-control-input" onchange="UpdateSelectedVal()">
                <label class="custom-control-label" for="@Model.CandidateTestQuestions.LstCandidateTestQuestionOptions[i].CandidateQuestionOptionId"><b>@optNo .&nbsp; </b>@Model.CandidateTestQuestions.LstCandidateTestQuestionOptions[i].QuestionAnswer</label>
                @Html.HiddenFor(m => @Model.CandidateTestQuestions.LstCandidateTestQuestionOptions[i].CandidateQuestionOptionId)

            </div>
        </li>
    }
    @Html.HiddenFor(m => Model.CandidateTestQuestions.IsSelectedAnswer)
</ul>