@model   OnlineTestApp.ViewModel.Email.AddEditSystemEmailTemplate
@{
    ViewBag.PageTitle = "Edit System Email Template";

}
@section PageHeading
{
    Email Templates
}
@section PageSubHeading
{
    Edit System Email Template
}
@section PageBreadCrum
{
    <li><a href="/manageadminemailtemplates/viewemailtemplates">Email Templates</a></li>
    <li class="active">Edit System Email Template</li>
}
<form method="post" data-has-chk-editor="true">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body card-box-body">
            

            <div class="form-group row">
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12">
                    <label>Email template name <i class="fa fa-asterisk"></i></label>
                </div>
                <div class="col-xl-10 col-lg-9 col-md-8 col-sm-12">
                    @Html.TextBoxFor(m => m.EmailTemplates.EmailTemplateName)
                    @Html.ValidationMessageFor(m => m.EmailTemplates.EmailTemplateName)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12">
                    <label>Email subject <i class="fa fa-asterisk"></i></label>
                </div>
                <div class="col-xl-10 col-lg-9 col-md-8 col-sm-12">
                    @Html.TextBoxFor(m => m.EmailTemplates.EmailSubject)
                    @Html.ValidationMessageFor(m => m.EmailTemplates.EmailSubject)
                </div>
            </div>

            @*<div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email from name <i class="fa fa-asterisk"></i></label>
                            @Html.TextBoxFor(m => m.EmailTemplates.EmailFromName)
                            @Html.ValidationMessageFor(m => m.EmailTemplates.EmailFromName)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email from email address <i class="fa fa-asterisk"></i></label>
                            @Html.TextBoxFor(m => m.EmailTemplates.EmailFromEmailAddress)
                            @Html.ValidationMessageFor(m => m.EmailTemplates.EmailFromEmailAddress)
                        </div>
                    </div>
                </div>*@
            <div class="form-group row">
                <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-4 col-lg-3 col-md-4 col-sm-12">
                            <label>Email reply to name <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-8 col-lg-9 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.EmailTemplates.ReplyToName)
                            @Html.ValidationMessageFor(m => m.EmailTemplates.ReplyToName)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-4 col-lg-3 col-md-4 col-sm-12">
                            <label>Email reply to email address <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-8 col-lg-9 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.EmailTemplates.ReplyToEmailAddress)
                            @Html.ValidationMessageFor(m => m.EmailTemplates.ReplyToEmailAddress)
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12">
                    <label>Email template description</label>
                </div>
                <div class="col-xl-10 col-lg-9 col-md-8 col-sm-12">
                    @Html.TextAreaFor(m => m.EmailTemplates.EmailTemplateDescription, new {  @rows = 5 })
                    @Html.ValidationMessageFor(m => m.EmailTemplates.EmailTemplateDescription)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label>Email body <i class="fa fa-asterisk"></i></label>
                        @Html.TextAreaFor(m => m.EmailTemplates.EmailBody, new {  @rows = 10 })
                        @Html.ValidationMessageFor(m => m.EmailTemplates.EmailBody)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-gradient">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 ">
                <button type="reset" class="btn btn-secondary hideReset">

                    Reset &nbsp;<i class="fa fa-refresh"></i>
                </button>
                <a href="/manageadminemailtemplates/viewemailtemplates" class="btn btn-secondary">
                    <i class="fa fa-arrow-left "></i>
                    &nbsp; Back

                </a>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 text-right">
                <button type="submit" class="btn btn-primary">
                    Update System Email Template Details
                    &nbsp; <i class="far fa-save"></i>
                </button>
            </div>
        </div>
    </div>
    @*@{Html.RenderPartial("~/Views/Email/EmailParameters/_allEmailTags.cshtml"); }*@
</form>


