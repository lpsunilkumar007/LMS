@model OnlineTestApp.Domain.Company.Companies
@{
    ViewBag.PageTitle = "Edit Company Details";
}
 
@section PageHeading
 {
    Manage Companies
}
@section PageSubHeading
{
     Edit Company Details
}
@section PageBreadCrum
 {
    <li><a href="/companies/viewcompanies">Manage Companies</a></li>
    <li class="active"> Edit Company Details</li>
}

<form class="content-group" method="post" id="editCompanyDetails" data-post-type='ajax' action="/Companies/UpdateCompanyDetails?companyId=@Model.CompanyId"
      data-success-method="AjaxHitRunSuccessfully">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body card-box-body">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Company Name <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.CompanyName, new { autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.CompanyName)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Org No. <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.OrgNo)
                            @Html.ValidationMessageFor(m => m.OrgNo)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Telephone Number <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.Telephone)
                            @Html.ValidationMessageFor(m => m.Telephone)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Email address <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.EmailAddress)
                            @Html.ValidationMessageFor(m => m.EmailAddress)
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="bg-gradient ">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 ">
                <button type="reset" class="btn btn-secondary hideReset">
                    <i class="fa fa-refresh"></i>
                    Reset
                </button>
                <a href="/companies/viewcompanies" class="btn btn-secondary">
                    <i class="fa fa-arrow-left "></i>
                    &nbsp; Back

                </a>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 text-right">
                <button type="submit" class="btn btn-primary">
                    Update Company Details
                    &nbsp; <i class="far fa-save"></i>
                </button>
            </div>
        </div>
    </div>
  

</form>
