@model OnlineTestApp.Domain.User.ApplicationUsers
@{
    ViewBag.PageTitle = "Edit Profile";
    
}
@section PageHeading
 {
    My Account
}
@section PageSubHeading
{
    Edit Profile
}
@section PageBreadCrum
 {
    <li>My Account</li>
    <li class="active">Edit Profile</li>
}
<form method="post" id="updateUserProfile" data-post-type='ajax' action="/myaccount/editprofile"
      data-success-method="EditProfileSuccess">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body card-box-body">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>First name <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.FirstName, new { autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Last name <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.LastName)
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Email address <i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.EmailAddress)
                            @Html.ValidationMessageFor(m => m.EmailAddress)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Mobile number<i class="fa fa-asterisk"></i></label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.MobileNumber)
                            @Html.ValidationMessageFor(m => m.MobileNumber)
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group row">
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12">
                            <label>Alternate number</label>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                            @Html.TextBoxFor(m => m.AlternateNumber)
                            @Html.ValidationMessageFor(m => m.AlternateNumber)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-gradient">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 text-right">
                <button class="btn btn-success btn-shadow">Update Profile &nbsp; <i class="far fa-save"></i></button>
            </div>
        </div>
    </div>
</form>
