@model OnlineTestApp.ViewModel.UserMemberShip.UserLoginViewModel

@{
    ViewBag.PageTitle = "User Login";
    
}
<body class="login-page">
    <section class="container h-100">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-xl-4 col-md-10 col-sm-10 col-xs-12">
                <div class="card border-0">
                    <div class="card-header bg-primary p-3">
                        <img src="~/Templates/Themes/CommonTheme/images/logo.png" class="d-block m-auto" />
                    </div>
                    <div class="card-body card-box-body p-4">
                        <form class="login-form" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group mb-4">
                                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Enter username",  autofocus = "autofocus" })
                                <span class="fas fa-user"></span>
                                @Html.ValidationMessageFor(m => m.UserName)

                                
                            </div>
                            <div class="form-group mb-4">
                                @Html.PasswordFor(m => m.UserPassword, new { placeholder = "Enter password"  })
                                <span class="fas fa-lock"></span>
                                @Html.ValidationMessageFor(m => m.UserPassword)
                                
                            </div>

                            <div class="form-group text-center mb-0">
                                <input type="submit" class="btn btn-success btn-shadow" value="Sign In">

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>



    @Scripts.Render("~/Anonymousjs")
    @if (ViewBag.ErrorBlock != null)
    {
        <script type="text/javascript">
            ErrorBlock('@ViewBag.ErrorBlock');
        </script>
    }
    else if (ViewBag.success != null)
    {
        <script type="text/javascript">
            Success('@ViewBag.Success');
        </script>
    }

</body>


