@model OnlineTestApp.Domain.Control.PagerControl
@if (Model == null) { return; }
@if (ViewBag.IsTopPaging != null && ViewBag.IsTopPaging == true)// && Model.TotalRecords > OnlineTestApp.SystemSettings.CanShowTopPage)
{
    <nav class="float-right">
        <ul class="pagination mb-0">
            @*<li class="page-item disabled"><a class="page-link" href="javascript:void(0)"><span>Previous</span> <i class="fas fa-angle-double-left"></i></a></li>*@
            @for (int i = Model.FirstIndex; i < Model.LastIndex; i++)
            {
                if (Model.CurrentPage == i)
                {
                    <li class="page-item active"><a class="page-link" href="javascript:void(0)">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@Model.QueryString&page=@i">@i</a></li>
                }


            }
            @*<li class="page-item"><a class="page-link" href="javascript:void(0)"><span>Next</span> <i class="fas fa-angle-double-right"></i></a></li>*@
        </ul>
    </nav>
}
else
{
    <div class="row justify-content-between">
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
            @*<p class="mb-0 pt-2">Showing 1 to 10 of 57 entries</p>*@
        </div>
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
            <nav class="float-right">
                <ul class="pagination mb-0">
                    @*<li class="page-item disabled"><a class="page-link" href="javascript:void(0)"><span>Previous</span> <i class="fas fa-angle-double-left"></i></a></li>*@
                    @for (int i = Model.FirstIndex; i < Model.LastIndex; i++)
                {
                    if (Model.CurrentPage == i)
                    {
                            <li class="page-item active"><a class="page-link" href="javascript:void(0)">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="@Model.QueryString&page=@i">@i</a></li>
                        }


                    }
                    @*<li class="page-item"><a class="page-link" href="javascript:void(0)"><span>Next</span> <i class="fas fa-angle-double-right"></i></a></li>*@
                </ul>
            </nav>
        </div>
    </div>

}